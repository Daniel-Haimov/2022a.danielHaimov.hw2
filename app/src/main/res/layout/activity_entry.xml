<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Entry">

    <ImageView
        android:id="@+id/entry_IMG_backGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="#5F000000"
        android:layout_centerInParent="true"
        android:cropToPadding="true" />

    <TextView
        android:id="@+id/entry_TXT_GameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="צבע אדום"
        android:textColor="#FF0000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/entry_BTN_Play"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:text="Play"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/entry_TXT_GameName"
        app:layout_constraintStart_toStartOf="@+id/entry_TXT_GameName"
        app:layout_constraintTop_toBottomOf="@+id/entry_TXTF_UserName" />

    <Button
        android:id="@+id/entry_BTN_Settings"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:text="Settings"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/entry_BTN_Play"
        app:layout_constraintStart_toStartOf="@+id/entry_BTN_Play"
        app:layout_constraintTop_toBottomOf="@+id/entry_BTN_Play" />

    <Button
        android:id="@+id/entry_BTN_Top10"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:text="Top 10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/entry_BTN_Play"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/entry_BTN_Play"
        app:layout_constraintTop_toBottomOf="@+id/entry_BTN_Settings" />

    <EditText
        android:id="@+id/entry_TXTF_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/entry_TXT_GameName"
        app:layout_constraintStart_toStartOf="@+id/entry_TXT_GameName"
        app:layout_constraintTop_toBottomOf="@+id/entry_TXT_GameName" />
</androidx.constraintlayout.widget.ConstraintLayout>